
   {{#with moviesCast}}
  <h2>Edit {{title}}</h2>
  <form action="/movies/{{_id}}/edit" method="post">
      <label for="title">Title:</label>
      <input
        type="text"
        name="title"
        value="{{title}}"
      />
      <br>

      <label for="genre">Genre:</label>
      <input
        type="text"
        name="genre"
        value="{{genre}}"
      />
      <br>

      <label for="plot">Plot:</label>
      <input
        type="text"
        name="plot"
        value="{{plot}}"
      />
      <br>

{{/with}}

      <label for="cast">Cast:</label>
      <select name="cast">
        {{#each allCelebrities}}
          <option value="{{id}}">{{name}}</option>
        {{/each}}
      </select>
    </div>
    <button type="submit">Update movie</button>
     <a href="/">Go back</a>
    </form>
    <hr>
  </form>
